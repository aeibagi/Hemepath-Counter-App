<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"
                />
            <solid android:color="#FF000000"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <padding android:left="4dp"
                android:top="3dp"
                android:right="3dp"
                />
            <gradient android:startColor="#ED1111"
                android:centerColor="#ED1111"
                android:endColor="#ED1111"
                android:angle="315"/>
        </shape>
    </item>
</layer-list>

