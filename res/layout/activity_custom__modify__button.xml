<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Custom_Modify_ButtonActivity" >

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvChooseColor"
        android:layout_marginTop="5dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/iB_Color_Green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/green" />

            <ImageButton
                android:id="@+id/iB_Color_orage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/orange" />



            <ImageButton
                android:id="@+id/iB_Color_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/yellow" />

            <ImageButton
                android:id="@+id/iB_blue_purple_6666cc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/blue_purple_6666cc" />

            <ImageButton
                android:id="@+id/iB_orangefamily_ffae61"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/orangefamily_ffae61" />

            <ImageButton
                android:id="@+id/iB_greenfamily_00cc99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/greenfamily_00cc99" />

            <ImageButton
                android:id="@+id/iB_dark_oragne_d1692c_048"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/dark_oragne_d1692c_048" />

            <ImageButton
                android:id="@+id/iB_darker_purple_5861be"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/darker_purple_5861be" />

            <ImageButton
                android:id="@+id/iB_gray_familyone_adafb1_072"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/gray_familyone_adafb1_048" />

            <ImageButton
                android:id="@+id/iB_light_bluefamily_5ddcd3_072"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/light_bluefamily_5ddcd3_048" />

            <ImageButton
                android:id="@+id/iB_light_blueish_81b3ff_072"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/light_blueish_81b3ff_048" />

            <ImageButton
                android:id="@+id/iB_light_brown_c78540_072"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/light_brown_c78540_048" />

            <ImageButton
                android:id="@+id/iB_light_orange_ffae61_072"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/light_orange_ffae61_048" />

            <ImageButton
                android:id="@+id/iB_light_grayblue_8387aa_072"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/light_grayblue_8387aa_048" />

            <ImageButton
                android:id="@+id/iB_light_pink_fb97c9_072"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/light_pink_fb97c9_048" />

            <ImageButton
                android:id="@+id/iB_light_gray_9198aa_072"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/light_gray_9198aa_048" />

            <ImageButton
                android:id="@+id/iB_light_purple_d28dfa_072"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/light_purple_d28dfa_048" />

            <ImageButton
                android:id="@+id/iB_light_whitegray_e7d2ef_072"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/light_whitegray_e7d2ef_048" />

            <ImageButton
                android:id="@+id/iB_lighter_pinkpurple_cc6699_072"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/lighter_pinkpurple_cc6699_048" />

            <ImageButton
                android:id="@+id/iB_veylight_green_ffff99_072"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/veylight_green_ffff99_048" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tvSound_Custome_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/horizontalScrollView1"
        android:layout_below="@+id/horizontalScrollView1"
        android:layout_marginTop="70dp"
        android:text="@string/Choose_Sound"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Spinner
        android:id="@+id/SP_Sound_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontalScrollView1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="65dp"
        android:layout_toRightOf="@+id/tvSound_Custome_activity"
        android:background="@drawable/spinner_style" />

    <ImageButton
        android:id="@+id/ibSpeakerIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvSound_Custome_activity"
        android:layout_below="@+id/tvSound_Custome_activity"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/speaker_icon" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        style="?android:attr/buttonBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <Button
            android:id="@+id/btn_create_custom_Button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style_yellow"
            android:text="@string/create_button" />

        <Button
            android:id="@+id/btn_exit_custom_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style_yellow"
            android:text="@string/Exit_custome_button" />

        <Button
            android:id="@+id/btn_modify_custom_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style_yellow"
            android:text="@string/Modify" />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_Enter_name_Custom_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Name_label"
        android:ems="10"
        android:hint="@string/enter_counter_name_hint"
        android:textColorHint="@android:color/white" />

    <TextView
        android:id="@+id/tvChooseColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/horizontalScrollView1"
        android:layout_below="@+id/Abbr_label"
        android:text="@string/Choose_color"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/Name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edt_Enter_name_Custom_modify"
        android:layout_alignBottom="@+id/edt_Enter_name_Custom_modify"
        android:layout_alignLeft="@+id/Abbr_label"
        android:text="@string/Object_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edt_Enter_abbr_Custom_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt_Enter_name_Custom_modify"
        android:layout_below="@+id/edt_Enter_name_Custom_modify"
        android:ems="10"
        android:hint="@string/enter_counter_abbr_hint"
        android:textColorHint="@android:color/white" >
    </EditText>

    <TextView
        android:id="@+id/Abbr_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edt_Enter_abbr_Custom_modify"
        android:layout_alignBottom="@+id/edt_Enter_abbr_Custom_modify"
        android:layout_toLeftOf="@+id/linearLayout1"
        android:text="@string/Object_abbr"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>