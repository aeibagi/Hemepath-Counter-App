<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:layout_marginTop="10dip"
    android:layout_marginBottom="10dip"
    android:orientation="horizontal" >
   
    <TextView
        android:id="@+id/display_data_activity_listview_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Cell Type"        
        android:textSize="18sp" />

     <View
        android:id="@+id/display_data_activity_listvew_picker_helper1"
        android:layout_width="1dip"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/display_data_activity_listview_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dip"
        android:layout_marginTop="4dip"
        android:background="?android:attr/dividerVertical" />
            
    <TextView
        android:id="@+id/display_data_activity_listview_number"
        android:layout_width="60dip"        
        android:layout_height="wrap_content"    
        android:layout_toRightOf="@id/display_data_activity_listvew_picker_helper1"    
        android:gravity="center"
        android:text="#"
        android:textSize="18sp" />

    <View
        android:id="@+id/display_data_activity_listvew_picker_helper2"
        android:layout_width="1dip"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/display_data_activity_listview_number"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dip"
        android:layout_marginTop="4dip"
        android:background="?android:attr/dividerVertical" />
    
    <TextView
        android:id="@+id/display_data_activity_listview_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/display_data_activity_listvew_picker_helper2"
        android:gravity="center"
        android:text="120&#37;"
        android:textSize="18sp" />
    
</RelativeLayout>